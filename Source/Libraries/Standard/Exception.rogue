class Exception
  PROPERTIES
    message     : String
    stack_trace = StackTrace()

  METHODS
    method init( message )

    method display
      stack_trace.display
      println message

    method to->String
      local result = String()
      result.println message
      return result

  GLOBAL METHODS
    method display( err:Exception )
      if (err) err.display

endClass

