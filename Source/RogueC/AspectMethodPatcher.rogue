module Rogue

class AspectMethodPatcher : InspectionVisitor [singleton]
  PROPERTIES
    this_type : Type

  METHODS
    method patch( this_type, m:Method )
      m.module_context = this_type.module_context
      m.type_context   = this_type
      visit( m )

    method on_enter( cmd:This )
      cmd.this_type = this_type
endClass
